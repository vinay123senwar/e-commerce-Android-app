<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Admin.AdminMaintainProductActivity"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginEnd="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/maintain_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/product_name"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_below="@+id/maintain_product_image_view"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/inputs_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:gravity="center_horizontal" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/maintain_product_image_view"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:contentDescription="@string/productimage"
            />
        <EditText
            android:id="@+id/maintain_product_price_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/product_price"
            android:textSize="16sp"
            android:layout_below="@id/maintain_product_name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/inputs_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:gravity="center_horizontal" />
        <EditText
            android:id="@+id/maintain_product_description_view"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:hint="@string/product_description"
            android:textSize="16sp"
            android:layout_below="@id/maintain_product_price_view"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:background="@drawable/inputs_design"
            android:padding="12dp"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/maintain_product_bttn"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:text="@string/apply_changes"
            android:textSize="18sp"
            android:layout_below="@id/maintain_product_description_view"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:background="@drawable/button"
            android:padding="12dp"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/maintain_delete_bttn"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:text="@string/delete_product"
            android:textSize="18sp"
            android:layout_below="@id/maintain_product_bttn"

            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:background="@drawable/button"
            android:padding="12dp"
            android:layout_margin="5dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>